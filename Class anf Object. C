#include <iostream>
using namespace std;

class Student {
public:
    int roll;
    char name[20];

    void getData() {
        cout << "Enter roll number: ";
        cin >> roll;
        cout << "Enter name: ";
        cin >> name;
    }

    void display() {
        cout << "Roll Number: " << roll << endl;
        cout << "Name: " << name << endl;
    }
};

int main() {
    Student s;   // object creation
    s.getData();
    s.display();
    return 0;
}
